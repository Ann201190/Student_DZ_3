<h1>Добавить студента</h1>

<form action="/add" method="POST">
  <div class="mb-3">
    <label for="lastname" class="form-label">Фамилия студента</label>
    <input type="text" name="lastname" class="form-control" id="lastname" aria-describedby="Введите фамилию студента">
  </div>


  <div class="mb-3">
    <label for="firstname" class="form-label">Имя студента</label>
    <input type="text" name="firstname" class="form-control" id="firstname" aria-describedby="Введите имя студента">
  </div>


  <div class="mb-3">
    <label for="patronymic" class="form-label">Отчество студента</label>
    <input type="text" name="patronymic" class="form-control" id="patronymic"
      aria-describedby="Введите отчество студента">
  </div>


  <div class="mb-3">
    <label for="age" class="form-label">Возраст студента</label>
    <input type="number" name="age" class="form-control" id="age" aria-describedby="Введите возраст студента">
  </div>


  <p><select id="groups" name="group">
      {{#if groups.length}}
      {{#each groups}}
      <option>{{name}}</option>
      {{/each}}
      {{else}}
      <option></option>
      {{/if}}
    </select></p>


  <button type="submit" class="btn btn-primary">Добавить</button>
</form>