<h1>Редактировать</h1>

<form action="/groups/edit" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Наименование группы</label>
    <input type="text" name="name" class="form-control" id="name" aria-describedby="Введите наименование группы"
      required value="{{group.name}}">
  </div>
  <input type="hidden" name="id" value="{{group.id}}">
  <button class="btn btn-primary">Добавить </button>
</form>